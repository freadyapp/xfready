  {
    "name": "Fready",
    "version": "0.1.0",
    "description": "Spend less time reading articles.",
    "permissions": [
      "storage",
      "tabs",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": [
        "third_party/jquery.min.js",
        "helpers.js",
        "dev.js",
        "background.js"
      ]
    },
    "content_scripts": [{
        "all_frames": true,
        "match_about_blank": true,
        "matches": [ "<all_urls>" ],
        "exclude_matches": [
          "*://docs.google.com/document/*"
        ],
        "run_at": "document_idle",
        "js": [
            "third_party/jquery.min.js",
            "third_party/minihtml.min.js",
            "third_party/tippy.min.js",
            "third_party/mousetrap.min.js",
            "third_party/readability.js",
            "third_party/readable.js",
            "dev.js",
            "assets/ui.js",
            "helpers.js",
            "injector.js"
        ],
        "css": [
          "injector.css"
        ]
    }],
    "browser_action": {
      "default_icon": {
        "16": "assets/logos/fready_logo_16.png",
        "32": "assets/logos/fready_logo_32.png",
        "48": "assets/logos/fready_logo_48.png",
        "64": "assets/logos/fready_logo_64.png",
        "128": "assets/logos/fready_logo_128.png",
        "256": "assets/logos/fready_logo_256.png"
      }
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Triggers Fready"
      }
    },
    "icons": {
      "16": "assets/logos/fready_logo_16.png",
      "32": "assets/logos/fready_logo_32.png",
      "48": "assets/logos/fready_logo_48.png",
      "64": "assets/logos/fready_logo_64.png",
      "128": "assets/logos/fready_logo_128.png",
      "256": "assets/logos/fready_logo_256.png"
    },
    "manifest_version": 2
  }
