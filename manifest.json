  {
    "name": "Fready",
    "version": "0.0.3",
    "description": "Spend less time reading articles.",
    "permissions": [
      "storage",
      "tabs"
    ],
    "externally_connectable": {
      "matches": [
        "https://www.fready.co/*"
      ]
    },
    "background": {
      "scripts": [
        "third_party/jquery.min.js",
        "helpers.js",
        "dev.js",
        "background.js"
      ],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "third_party/jquery.min.js",
          "third_party/minihtml.min.js",
          "third_party/readability.js",
          "dev.js",
          "assets/ui.js",
          "injector.js"
        ],
        "css": [
          "injector.css"
        ]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "assets/logos/fready_logo_16.png",
        "32": "assets/logos/fready_logo_32.png",
        "48": "assets/logos/fready_logo_48.png",
        "64": "assets/logos/fready_logo_64.png",
        "128": "assets/logos/fready_logo_128.png",
        "256": "assets/logos/fready_logo_256.png",
        "512": "assets/logos/fready_logo_512.png"
      }
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Triggers Fready"
      }
    },
    "icons": {
      "16": "assets/logos/fready_logo_16.png",
      "32": "assets/logos/fready_logo_32.png",
      "48": "assets/logos/fready_logo_48.png",
      "64": "assets/logos/fready_logo_64.png",
      "128": "assets/logos/fready_logo_128.png",
      "256": "assets/logos/fready_logo_256.png",
      "512": "assets/logos/fready_logo_512.png"
    },
    "manifest_version": 2
  }