  {
    "name": "Fready",
    "version": "0.0.5",
    "description": "Chill when reading from a screen",
    "permissions": [
      "https://www.fready.co/*",
      "http://localhost:3000/*",
      "activeTab",
      "declarativeContent",
      "storage",
      "tabs",
      "notifications"
    ],
    "background": {
      "scripts": [
        "third_party/jquery.min.js",
        "helpers.js",
        "dev.js",
        "background.js"
      ],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "third_party/jquery.min.js",
          "dev.js",
          "assets/ui.js",
          "injector.js"
        ],
        "css": [
          "injector.css"
        ]
      }
    ],
    "browser_action": {
      // "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/logos/fready_logo_16.png",
        "32": "assets/logos/fready_logo_32.png",
        "48": "assets/logos/fready_logo_48.png",
        "64": "assets/logos/fready_logo_64.png",
        "128": "assets/logos/fready_logo_128.png",
        "256": "assets/logos/fready_logo_256.png",
        "512": "assets/logos/fready_logo_512.png"
      }
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Triggers Fready"
      }
    },
    "icons": {
      "16": "assets/logos/fready_logo_16.png",
      "32": "assets/logos/fready_logo_32.png",
      "48": "assets/logos/fready_logo_48.png",
      "64": "assets/logos/fready_logo_64.png",
      "128": "assets/logos/fready_logo_128.png",
      "256": "assets/logos/fready_logo_256.png",
      "512": "assets/logos/fready_logo_512.png"
    },
    "manifest_version": 2
  }